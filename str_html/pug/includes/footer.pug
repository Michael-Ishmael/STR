footer.container-fluid
    .container
        .row.justify-content-center.social-media
            -
                var smLinks = [
                    { label: 'Twitter', link: twitterLink, className: 'twitter' },
                    { label: 'LinkedIn', link: linkedInLink, className: 'linked-in' },
                    { label: 'Medium', link: mediumLink, className: 'medium' },
                    { label: 'Newsletter', link: newsletterLink, className: 'newsletter' }
                    ];

            each smLink in smLinks

                .col-3.col-sm-3.col-lg-2.text-center.p-0
                    a.sm-link(href=smLink.link, target= smLink.link.indexOf('http') > -1 ? "_blank" : null)
                        i.sm-icon(class=smLink.className)
                        span #{smLink.label}

    .cream-border

    nav.footer-menu.p-4
        ul.nav.justify-content-center

            each navItem in fullNavItems
                li.nav-item
                    a.nav-link(href=navItem.link, class=currentPage==navItem.name?'active':'')= navItem.name

